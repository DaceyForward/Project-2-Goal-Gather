<%- include('../partials/nav') %>

<h1>All Goals</h1>

<h3>Library of all IEP goals created.</h3>

<table>
    <thead>
        <tr>
            <th>Subject</th>
            <th>Goal</th>
            <th>Objectives</th>
        </tr>
    </thead>
    <tbody>
        <% goals.forEach(function(goal) { %>
            <tr>
                <td><%= goal.subject %></td>
                <td><%= goal.desc %></td>
                <% if (user) {%>
                <td><a href="/goals/<%= goal._id %>">DETAILS</a></td>
                <% } else { %>
                    <td>DETAILS</td>
                <% } %>
            </tr>
        <% }) %>
    </tbody>
</table>
<% if (user) {%>
<div>
<a class="btn btn-light" href="/goals/new/" role="button">Add New Goal</a>
</div>
<% } %>
