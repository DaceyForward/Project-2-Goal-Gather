<%- include('../partials/nav') %>

<h5><%= goal.desc %></h5>

<% if (user) {%>
    <div>
        <button>
            <a href="/goals/edit/<%= goal._id %>">Edit This Goal</a>
        </button>
    </div>
    <% } %>

<h4>Objective List:</h4>

<div class="container-md">
    <% if (goal.objectives.length) { %>
        <!-- loop the comments and display -->
        <div class="container-sm m-4">
            <% goal.objectives.forEach(obj => {%>
                <div class="card mb-4 shadow">
                    <div class="card-body">
                        <p><%= obj.desc %></p>
                        <div class="d-flex justify-content-between">
                            <small>author: <%= obj.author.name %></small>
                            <% if (user && obj.author?._id == user.id) { %>
                                <form action="/objectives/<%= goal._id %>/<%= obj._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-danger" value="X">
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p>No Objectives Yet</p>
    <% } %>
</div>



<hr>
<% if (user) { %>
    <div class="col-md-6">
        <form action="/objectives/<%= goal._id %>" method="POST">
            <fieldset>
                <legend>Add Objective</legend>
                <label class="form-label">Description:</label>
                <input class="form-control mb-1" type="text" name="desc">
                <input type="submit" class="btn btn-success" value="Create Objective">
            </fieldset>
        </form>
    </div>
<% } %>
<hr>

<%- include('../partials/footer') %>